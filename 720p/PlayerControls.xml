<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<onload>Dialog.Close(playercontrols)</onload>
	<onload condition="Player.HasMedia + ![Window.IsVisible(fullscreenvideo) | Window.IsVisible(visualisation)]">SetFocus(407)</onload>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="button">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<description>Invisible back button</description>
			<texturefocus>empty.png</texturefocus>
			<texturenofocus>empty.png</texturenofocus>
			<onclick>back</onclick>
			<animation effect="fade" start="1" end="1" time="0" condition="true">Conditional</animation>
		</control>

	</controls>
</window>